<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/handleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Handle: N/A"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/ratingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: N/A"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/handleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/handleEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Codeforces Handle"
        app:layout_constraintTop_toBottomOf="@+id/ratingTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    <!--        app:layout_constraintBottom_toTopOf="@+id/avatarImageView"--><![CDATA[
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fetchButton"
        app:layout_constraintVertical_bias="0.171" />

    ]]>

    <Button
        android:id="@+id/fetchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Fetch Data"
        app:layout_constraintBottom_toTopOf="@+id/problemNamesTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/handleEditText"
        app:layout_constraintVertical_bias="0.162" />

    <Button
        android:id="@+id/last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last_submisson"
        app:layout_constraintBottom_toTopOf="@+id/problemNamesTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fetchButton"
        app:layout_constraintVertical_bias="0.491" />

    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="203dp"
        android:layout_height="118dp"
        android:layout_gravity="center"
        android:contentDescription="User Avatar"
        android:src="@drawable/placeholder_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/handleEditText"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/problemNamesTextView"
        android:layout_width="361dp"
        android:layout_height="192dp"
        android:layout_marginTop="172dp"
        android:text="problemlist"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/avatarImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/handleEditText"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>